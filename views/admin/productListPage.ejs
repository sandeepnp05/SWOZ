<%- include('../layouts/adminHead.ejs') %>
<section class="content-main">
  <div class="content-header">
    <h2 class="content-title card-title">Products List</h2>
  </div>
  <div class="row gx-3">
    <div class="col-md-12">
      <div class="card-body">
        <div class="table-responsive">
          <table id="myTable" class="table table-hover text-center">
            <thead>
              <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Category</th>
                <th>Description</th>
                <th>Quantity/Stock</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <!-- Table rows for products here -->
              <% if (product && product.length > 0) { for (let i = 0; i <
              product.length; i++) { %>
              <tr>
                <td width="25%">
                  <div class="left">
                    <img
                      src="/uncroppedImages/<%= product[i].image[0] %>"
                      class="img-sm img-thumbnail"
                      alt="Item"
                    />
                  </div>
                  <div class="info pl-3">
                    <h6 class="mb-0 title"><%= product[i].name %></h6>
                  </div>
                </td>
                <td>
                  <span>â‚¹<%= product[i].price %></span>
                </td>
                <td>
                  <span><%= product[i].category %></span>
                </td>
                <td>
                  <span><%= product[i].description %></span>
                </td>
                <td>
                  <span class="badge rounded-pill alert-success"
                    ><%= product[i].quantity %></span
                  >
                </td>
                <td>
                  <button
                    id="block-<%= product[i]._id %>"
                    onclick="blockProduct('<%= product[i]._id %>')"
                    class="btn btn-sm btn-danger rounded font-sm mt-1"
                  >
                    List
                  </button>
                </td>
              </tr>
              <% } } %>

              <!-- End of table rows for products -->
            </tbody>
          </table>
        </div>
        <div class="d-flex justify-content-end mt-3">
          <a
            href="/admin/productAddPage"
            class="btn btn-primary btn-sm rounded me-2"
            >Create new</a
          >
          <a
            href="/admin/productEditPage"
            class="btn btn-danger btn-sm rounded me-2"
            >Edit Product</a
          >
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('../layouts/adminFooter.ejs') %>
