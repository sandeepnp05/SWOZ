<%- include('../layouts/header.ejs') %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-header">
          <h2 class="text-center">User Edit</h2>
        </div>
        <div class="card-body">
          <form method="POST" action="/admin/update">
            <div class="form-group">
              <label for="email">Name:</label>
              <input type="text" class="form-control" id="email" name="name" value="<%= user.name %>" placeholder="Enter Name" required>
            </div>
            <div class="form-group">
              <label for="password">Email:</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" placeholder="Enter Email" required>
            </div>
            <div class="form-group">
                <label for="phone">Phone:</label>
                <input type="tel" class="form-control" id="phone" name="phone" value="<%= user.phone %>" placeholder="Enter Phone" required>
              </div>
              <div class="form-group mt-3">
                <label>Verified</label>
                <input type="radio" class="" name="verify" value="1" <% if(user.is_verified == 1) { %> checked <% } %> >
                <label>Unverified</label>
                <input type="radio" class="" name="verify" value="0" <% if(user.is_verified == 0) { %> checked <% } %> >
              </div>
            <input type="hidden" name="id" value="<%= user._id %>">
            <button type="submit" class="btn btn-primary mt-3">Update</button>
            <a type="submit" class="btn btn-primary mt-3" href="/admin/dashboard">Go Back</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../layouts/footer.ejs') %>
