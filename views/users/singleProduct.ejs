<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
  document.querySelectorAll(".img-zoom").forEach((elem) => {
    let x, y, width, height;
    const previewBox = document.createElement("div");
    previewBox.className = "preview-box";
    document.body.appendChild(previewBox);

    elem.onmouseenter = () => {
      const size = elem.getBoundingClientRect();
      x = size.x;
      y = size.y;
      width = size.width;
      height = size.height;
    };

    elem.onmousemove = (e) => {
      const horizontal = ((e.clientX - x) / width) * 100;
      const vertical = ((e.clientY - y) / height) * 100;

      // Update the image zoom
      elem.style.setProperty("--x", horizontal + "%");
      elem.style.setProperty("--y", vertical + "%");

      // Update the preview box position
      const previewX = e.clientX + 20; // Adjust as needed
      const previewY = e.clientY + 20; // Adjust as needed
      previewBox.style.left = previewX + "px";
      previewBox.style.top = previewY + "px";
    };

    elem.onmouseleave = () => {
      // Hide the preview box when leaving the image
      previewBox.style.display = "none";
    };
  });
</script>
<script>
  const user = "<%=user_id%>";
  const totalStock = parseInt("<%=singleProduct.quantity %>");
  const addToCart = async (productId, quantity, singlePrice) => {
    try {
      event.preventDefault();

      if (user) {
        const productData = await axios.post("/addToCart", {
          productId,
          quantity,
          singlePrice,
          totalStock,
        });
        //   alert(totalStock);
        if (productData.data.count) {
          document.getElementById(
            "cartCount"
          ).innerHTML = `<span class="icon-shopping_cart" ></span>${productData.data.count}`;
          swal("Added to cart", "", "success");
        }
        if (productData.data.message) {
          swal("Added to cart", "", "success");
        }

        if (productData.data.cartMessage) {
          swal("Cart quantity reaches the limit");
        }
        return productData;
      } else {
        swal({
          title: "Please Login And Explore Our Products",
        }).then(() => {
          window.location.href = "/login";
        });
      }
    } catch (error) {
      console.log(error.message);
    }
  };
</script>

