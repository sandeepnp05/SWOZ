<!-- Start OTP Login Box Area -->
<section class="otp_login_box_area section_gap">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 offset-lg-3">
        <div class="otp_login_form_inner">
          <h3>Reset Password</h3>

          <form
            class="row login_form"
            action="/forgetResetSuccess"
            method="post"
            id="otpLoginForm"
            novalidate="novalidate"
          >
          <div class="col-md-12 form-group">
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              placeholder="Enter Password"
              onfocus="this.placeholder = ''"
              onblur="this.placeholder = 'Confirm Password'"
              required
            />
          </div>
          <div class="col-md-12 form-group">
            <input
              type="password"
              class="form-control"
              id="confirmPassword"
              name="confirmPassword"
              placeholder="Confirm Password"
              onfocus="this.placeholder = ''"
              onblur="this.placeholder = 'Confirm Password'"
              required
            />
          </div>
            <div class="col-md-12 form-group">
              <button type="submit" class="primary-btn">Submit</button>
              
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  function validateOTP() {
    const otpInput = document.getElementById("otp");
    const otpValue = otpInput.value.trim();

    // Check if the OTP is a 4-digit number
    const otpRegex = /^\d{4}$/;
    if (!otpRegex.test(otpValue)) {
      alert("Please enter a valid 4-digit OTP.");
      return false; // Prevent form submission
    }

    return true; // Allow form submission
  }
</script>
<!--================End Login Box Area =================-->

